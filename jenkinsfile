pipeline {
    agent any
    environment {
        IMAGE_NAME = 'node:14'
        REGISTRY = 'aws_account_id.dkr.ecr.region.amazonaws.com'
        REPOSITORY_URI = "${REGISTRY}/${IMAGE_NAME}"
        EC2_INSTANCE_ID = 'i-043d8645253e9d2ba'
        EC2_PUBLIC_IP = '13.201.22.249'
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Anuppatil006/vprofile-project.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    def dockerImage = docker.build("${REPOSITORY_URI}:latest")
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    docker.image("${REPOSITORY_URI}:latest").inside {
                        sh 'bash test.sh'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {ssh -i /path/to/your/key.pem ec2-user@${EC2_PUBLIC_IP} 'docker pull ${REPOSITORY_URI}:latest && docker run -d -p 8080:8080 ${REPOSITORY_U>
                    """
                    sh command
                }
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
            cleanWs()
        }
    }
}

                script {
                    def command = """
                    docker login -u AWS -p \$(aws ecr get-login-password --region region) ${REGISTRY}
                    docker push ${REPOSITORY_URI}:latest
